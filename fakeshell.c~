int fakeShell()
{
char *fakeDir;
char *homedir;
if ( (homedir = (*getenv("HOME")) ) == NULL) 
{
    homedir = getpwuid(getuid())->pw_dir;
}

	while( showprompt )
	{
		fputs(&prompt, stderr);

